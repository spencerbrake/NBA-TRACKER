<%- include('../partials/header') %> 


<section class="show">
  <div>Name: <%= players.name %> </div>
  <div>Rings: <%= players.rings %> </div>
  <div>Teams: <%= players.teams %></div>
  <div>Active: <%= players.activePlayer ? 'Yes' : 'No' %></div>
</section>
<button><a href="/players/<%= players.id %>/edit">Edit Player</a></button><br>

<% if (players.comments.length) { %>
    <table class="comments">
      <thead>
        <tr>
          <th>Date</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        <% players.comments.forEach(function(c) { %>
          <tr>
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>

<br><br>
<h3>Comments</h3>
<form id="add-comment-form" method="POST" action="/players/<%= players._id %>/comments">
  <input name='content'>
  <button type="submit">ADD COMMENT</button>
</form>
