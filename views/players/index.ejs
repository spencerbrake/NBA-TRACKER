<%- include('../partials/header') %>
<body>
  <h1>BALLERS LIST</h1>
  <table id='list'>
      <thead>
          <tr>
              <th>Name</th>
              <th>Rings</th>
              <th>Active</th>
              <th>Details</th>
              <th>Delete</th>
          </tr>
      </thead>
      <tbody>
          <% players.forEach(function(p) { %>
              <tr>
                  <td><%= p.name %></td>
                  <td><%= p.rings %></td>
                  <td><%= p.activePlayer ? 'Yes' : 'Nope' %></td>
                  <td><a href="/players/<%= p._id %>">DETAILS</a></td>
                  <td><form action="/players/<%= p.id %>?_method=DELETE"
                    class="delete-player" method="POST">
                    <button type="submit">X</button></td>
              </tr>
          <% }); %>
      </tbody>
  </table>
</body>
